<% if @reviews.blank? %>
  <span class="center"> There is no review yet</span>
<% end %>

<% @reviews.order("id desc").each do |r| %>
  <hr>
  <div class="row">
    <div class="col m10">
  
      <div><%= r.rating %></div>
      <div><%= r.comment %></div>
      <div>
        <%= link_to "Remove",  [@aircraft, r], method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </div>
  </div>
<% end %>
